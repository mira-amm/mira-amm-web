{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project web --web",
  "targets": {
    "test": {
      "dependsOn": ["build"],
      "command": "vitest",
      "options": {
        "cwd": "apps/web"
      }
    },
    "dev:local": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx dev indexer", "next dev"],
        "cwd": "apps/web",
        "env": {
          "NEXT_PUBLIC_NETWORK_URL": "http://localhost:4000/v1/graphql"
        },
        "parallel": true
      },
      "configurations": {
        "production": {
          "env": {
            "NODE_ENV": "production"
          }
        }
      }
    }
  }
}
