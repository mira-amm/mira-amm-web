{
  "extends": "../../tsconfig.base.json",
  "references": [
    {
      "path": "./tsconfig.server.json"
    }
  ],
  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "dist/apps/microgame/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
