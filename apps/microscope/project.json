{
  "name": "microscope",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/microscope",
  "projectType": "application",
  "targets": {
    "dev": {
      "command": "wxt",
      "options": {
        "cwd": "apps/microscope"
      },
    },
    "build": {
      "command": "wxt build",
      "options": {
        "cwd": "apps/microscope"
      },
    },
    "compile": {
      "command": "tsc --noEmit",
      "options": {
        "cwd": "apps/microscope"
      },
    },
    "postinstall": {
      "command": "wxt prepare",
      "options": {
        "cwd": "apps/microscope"
      },
    },
    "zip": {
      "command": "wxt zip",
      "options": {
        "cwd": "apps/microscope"
      },
    },
    "dev:firefox": {
      "command": "wxt -b firefox",
      "options": {
        "cwd": "apps/microscope"
      },
    },
    "build:firefox": {
      "command": "wxt build -b firefox",
      "options": {
        "cwd": "apps/microscope"
      },
    },
    "zip:firefox": {
      "command": "wxt zip -b firefox",
      "options": {
        "cwd": "apps/microscope"
      },
    },
  }
}
