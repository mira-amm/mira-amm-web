{
  "name": "mira-v1-ts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "metadata": {
    "description": "TypeScript SDK for Mira AMM."
  },
  "sourceRoot": "libs/mira-v1-ts/src",
  "projectType": "library",
  "implicitDependencies": ["!libs/web"],
  "tags": ["sdk", "typescript", "v1"],
  "targets": {
    "typecheck": {
      "dependsOn": ["typegen"],
      "command": "tsc --noEmit",
      "options": {
        "cwd": "libs/mira-v1-ts"
      }
    },
    "build": {
      "dependsOn": ["typegen"],
      "command": "tsup",
      "options": {
        "cwd": "libs/mira-v1-ts"
      }
    },
    "dev": {
      "command": "tsup",
      "options": {
        "cwd": "libs/mira-v1-ts"
      }
    },
    "typegen": {
      "command": "pnpm nx typegen:scripts && pnpm nx typegen:contracts",
      "options": {
        "cwd": "libs/mira-v1-ts"
      }
    },
    "typegen:scripts": {
      "command": "fuels typegen -i './sway_abis/scripts/*/release/*-abi.json' -o ./src/sdk/typegen/scripts --script",
      "options": {
        "cwd": "libs/mira-v1-ts"
      }
    },
    "typegen:contracts": {
      "command": "fuels typegen -i './sway_abis/contracts/*/release/*-abi.json' -o './src/sdk/typegen/contracts'",
      "options": {
        "cwd": "libs/mira-v1-ts"
      }
    }
  }
}
