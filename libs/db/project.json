{
  "name": "db",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "metadata": {
    "description": "Database models and utilities."
  },
  "sourceRoot": "libs/db",
  "implicitDependencies": ["!libs/web"],
  "projectType": "library",
  "tags": ["libs"],
  "targets": {
    "view": {
      "dependsOn": ["types", "schema"],
      "command": "nx run-many -t studio visualizer # ðŸŽ™ View database schema at `local.drizzle.studio`, and visualizer at `localhost:5600`",
      "options": {
        "cwd": "libs/db"
      }
    },
    "studio": {
      "command": "drizzle-kit studio --config=drizzle.config.ts --verbose",
      "options": {
        "cwd": "libs/db"
      }
    },
    "visualizer": {
      "command": "pnpx drizzle-lab visualizer --debug -p=5600 -c='drizzle.config.ts'",
      "options": {
        "cwd": "libs/db"
      }
    },
    "types": {
      "command": "payload generate:types",
      "options": {
        "cwd": "apps/admin",
        "env": {
          "NODE_OPTIONS": "--no-deprecation"
        }
      }
    },
    "schema": {
      "command": "payload generate:db-schema",
      "options": {
        "cwd": "apps/admin",
        "env": {
          "NODE_OPTIONS": "--no-deprecation"
        }
      }
    }
  }
}
