{
  "name": "libs/db",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/db",
  "implicitDependencies": [
    "!libs/web"
  ],
  "projectType": "library",
  "tags": [],
  "targets": {
    "view": {
      "command": "nx run-many -t studio visualizer # ðŸŽ™ View database schema at `local.drizzle.studio`, and visualizer at `localhost:5600` ",
      "options": {
        "cwd": "libs/db"
      }
    },
    "studio": {
      "command": "drizzle-kit studio --config=drizzle.config.ts --verbose",
      "options": {
        "cwd": "libs/db"
      }
    },
    "visualizer": {
      "command": "pnpx drizzle-lab visualizer --debug -p=5600 -c='./drizzle.config.ts' -e='../../.env'",
      "options": {
        "cwd": "libs/db"
      }
    }
  }
}
