{
  "extends": "./tsconfig.json",
  // TODO: remove these comments once this project setup is well-documented with gotchas
  // credit: https://github.com/mkvlrn/template-nest
  // https://community.vercel.com/t/express-101-everything-about-deploying-your-express-app-on-vercel/4870
  "compilerOptions": {
    "noEmit": true, // no transpiling
    // no funny business
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    // hella strict
    // https://whatislove.dev/articles/the-strictest-typescript-config/
    "allowJs": true,
    "exactOptionalPropertyTypes": true,
    // "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "strictNullChecks": true,
    // esm, the node way
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    // pnpm compatibility
    // "preserveSymlinks": true,
    "resolveJsonModule": true,
    // don't try to check for errors on imported libs
    "skipLibCheck": true,
    // nest uses these weird ass experimental decorators
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
