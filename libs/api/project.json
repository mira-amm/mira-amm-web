{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "metadata": {
    "description": "Back-End Application for the Microchain Systems Platform."
  },
  "sourceRoot": "libs/api/src",
  "projectType": "library",
  "implicitDependencies": ["!libs/web"],
  "tags": ["tools", "back-end"],
  "// targets": "to see all targets run: nx show project api --web",
  "targets": {
    "dev": {
      "dependsOn": ["compodoc", "ts-sdk:build"],
      "command": "tsx --watch src/main.ts",
      "options": {
        "cwd": "libs/api"
      }
    },
    "compodoc": {
      "command": "compodoc",
      "cache": true,
      "options": {
        "cwd": "libs/api"
      }
    },
    "build": {
      "dependsOn": ["ts-sdk:build"],
      "command": "tsx build.ts && compodoc",
      "cache": true,
      "options": {
        "cwd": "libs/api"
      }
    },
    "start": {
      "command": "vercel dev",
      "options": {
        "cwd": "libs/api"
      }
    },
    "vercel:build": {
      "command": "vercel build --local-config ./vercel.json --prod",
      "cache": true,
      "options": {
        "cwd": "libs/api"
      }
    },
    "vercel:deploy": {
      "dependsOn": ["vercel:build"],
      "command": "pnpm vercel deploy --prebuilt --prod",
      "options": {
        "cwd": "libs/api"
      }
    },
    "test": {
      "command": "tsx --test",
      "options": {
        "cwd": "libs/api"
      }
    },
    "e2e": {
      "command": "tsx --test 'src/**/*.spec.ts'",
      "options": {
        "cwd": "libs/api"
      }
    },
    "typecheck": {
      "command": "tsc --noEmit",
      "options": {
        "cwd": "libs/api"
      }
    }
  }
}
