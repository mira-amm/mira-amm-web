{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es2020",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/docs": [
        "libs/docs/index.ts"
      ],
      "@/docs/*": [
        "libs/docs/*"
      ],
    },
    "declaration": false,
    "importHelpers": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "compileOnSave": false
}
