{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "paths": {
      "mira-dex-ts": ["libs/mira-v1-ts/src/index.ts"],
      "@/*": ["libs/web/*"],
      "@/aceternity/*": ["libs/external/aceternity-ui/*"],
      "@/api/*": ["libs/api/*"],
      "@/db": ["libs/db/index.ts"],
      "@/db/*": ["libs/db/*"],
      "@/docs": ["libs/docs/index.ts"],
      "@/engine": ["libs/engine/index.ts"],
      "@/engine/*": ["libs/engine/*"],
      "@/fumadocs-ui/*": ["libs/external/fumadocs-ui/*"],
      "@/magic-ui/*": ["libs/external/magic-ui/*"],
      "@/meshwave-ui/icons": ["libs/meshwave-ui/src/components/icons/index.tsx"],
      "@/meshwave-ui/*": ["libs/meshwave-ui/*"],
      "@/microdoctor/*": ["libs/microdoctor/*"],
      "@/platform-vercel/*": ["libs/platform-vercel/*"],
      "@/shadcn-ui/*": ["libs/external/shadcn-ui/*"],
      "@/shared": ["libs/shared/index.ts"],
      "@/shared/*": ["libs/shared/*"],
      "@/web": ["libs/web/index.ts"],
      "@/web/*": ["libs/web/*"],
      "@payload-config": ["apps/admin/src/payload.config.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
