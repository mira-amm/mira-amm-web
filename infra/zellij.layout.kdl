layout {
    tab name="ğŸ”Œ API" focus=true hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane split_direction="vertical" {
        pane split_direction="horizontal" size="30%" {
            pane command="pnpm" name="âš™ API Layer + Admin Panel | 8000 | admin.mira.ly" cwd="../" focus=true {
                args "nx" "dev" "admin"
            }
            pane size="80%" command="pnpm" name="ğŸ’¿ Database | 5432 | Nix-PostgreSQL" close_on_exit=true cwd="../" {
                args "nx" "up" "infra"
            }
            }

            pane command="pnpm" name="ğŸŸ© Mira App | 3000 | mira.ly" cwd="../" {
                args "nx" "dev" "web"
            }

        pane split_direction="horizontal" size="30%" {
            pane command="pnpm" name="ğŸ“š Docs | 4000 | docs.mira.ly" cwd="../" {
                args "nx" "dev" "docs"
            }
                pane command="pnpm" name="ğŸ› Architecture | 6400 | arch.mira.ly" cwd="../" {
                    args "nx" "dev" "arch"
                    start_suspended true
                }
            pane command="pnpm" name="ğŸ—º Project Graph - Nx | 4211 | graph.mira.ly" cwd="../" {
                    args "nx" "graph" "--groupByFolder" "--open='false'" "--verbose"
                }
            }
            }
        floating_panes {
            pane command="atac" name="{A}rguably a {T}erminal {A}PI {C}lient" {
                args "--no-ansi-log"
            }
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="ğŸ’¿ Database" {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="lazysql" name="Lazysql" {
            args "postgres://postgres:password@127.0.0.1:5432/postgres?sslmode=disable"
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="ğŸ‘€ Previews" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
                pane command="browsh" name="Web Browser Preview" cwd="../" {
                    args "http://localhost:3000" "http://localhost:8000" "http://localhost:4000"
                    /- "http://localhost:4211" "https://local.drizzle.studio" "http://localhost:5600"
                    start_suspended true
                }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="ğŸ’ Git" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="lazygit" name="Lazygit" {
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }

        floating_panes {
            pane command="pnpm" name="ğŸ§¼ Perform a clean install" cwd="../" {
                start_suspended true
                height 25
                width 86
                x 43
                y 14
                args "ri"
            }
        }
    }
    tab name="ğŸ“ Files" {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="yazi" name="Yazi" {
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
        floating_panes {
            pane command="rm" name="ğŸš¨ WARNING: Delete local database?" cwd="../" {
                start_suspended true
                height 25
                width 86
                x 43
                y 14
                args "-rf" "apps/admin/media" "infra/pgdata"
            }
        }
    }
    tab name="ğŸ©º Health" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="btop" name="btop" {
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    /- tab name="ğŸ§® Network" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="sudo" name="netscanner" {
            args "netscanner"
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
     tab name="ğŸ›  Devtools" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane split_direction="vertical" {
        pane split_direction="horizontal" {
                pane name="PayloadCMS Schema, Typegen, & Importmap" command="pnpm" cwd="../" {
                    args "nx" "types" "admin"
                    start_suspended true
                   }

                pane command="pnpm" name="ğŸ¨ Storybook | 6006 | design.mira.ly" cwd="../" {
                    args "storybook"
                }
                }
        pane split_direction="horizontal" {
                pane command="pnpm" name="ğŸ“¦ Node Modules Inspector | 7000" cwd="../" {
                    args "node-modules-inspector" "--depth=7" "--port=7000" "--open=false"
                }
                pane command="pnpm" name="ğŸ“Š Drizzle Studio | local.drizzle.studio" cwd="../" {
                    args "nx" "studio" "db"
                }
                pane command="pnpm" name="ğŸ‘€ Schema Visualizer | 5600" cwd="../" {
                    args "nx" "visualizer" "db"
                }
                }
                }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
}
